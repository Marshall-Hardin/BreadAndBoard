package com.breadandboard.data;

import java.util.List;

import com.breadandboard.beans.Review;
import com.breadandboard.beans.Trip;
import com.breadandboard.beans.User;

/**
 * 
 * @author Zev
 *
 */

public interface UserRepository {
	public List<Trip> viewCurrentTrips(); // all trips user has planned
	public List<Review> viewRecentReviews(); // all reviews user has done
	public int banUser(User user);
	public List<User> viewAllBanUsers();
	public void upgradeUser(User user); // upgrade user to admin
	
}
